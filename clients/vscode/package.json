{
	"name": "objeck-lsp",
	"description": "Language server for Objeck",
	"icon": "images/gear_wheel_128.png",
	"author": "Randy Hollines",
	"license": "New BSD",
	"version": "2025.2.2",
	"repository": {
		"type": "git",
		"url": "https://github.com/objeck/objeck-lsp"
	},
	"publisher": "objeck-lsp",
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.7.4"
	},
	"activationEvents": [
		"onLanguage:plaintext"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "LSP configuration",
			"properties": {
				"languageServerExample.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"languageServerExample.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
		"languages": [{
            "id": "objeck",
            "aliases": ["Objeck", "objeck"],
            "extensions": [".obs"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "objeck",
            "scopeName": "source.objeck",
            "path": "./syntaxes/objeck.tmLanguage.json"
        }]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^8.2.2",
		"@types/node": "^14.18.16",
		"@typescript-eslint/eslint-plugin": "^4.27.0",
		"@typescript-eslint/parser": "^4.27.0",
		"eslint": "^7.27.0",
		"mocha": "^8.3.2",
		"typescript": "^4.2.3"
	}
}
