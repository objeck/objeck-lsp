{
	"name": "objeck-lsp",
	"description": "Language server for Objeck",
	"icon": "images/gear_wheel_128.png",
	"author": "Randy Hollines",
	"license": "New BSD",
	"version": "2026.2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/objeck/objeck-lsp"
	},
	"publisher": "objeck-lsp",
	"categories": [
		"Programming Languages",
		"Formatters"
	],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.75.0"
	},
	"activationEvents": [
		"onLanguage:objeck"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "LSP configuration",
			"properties": {
				"objk.win.install.dir": {
					"type": "string",
					"default": "C:\\Program Files\\Objeck",
					"description": "Objeck Windows install directory"
				},
				"objk.posix.install.dir": {
					"type": "string",
					"default": "/usr/local/objeck",
					"description": "Objeck Posix install directory"
				}
			}
		},
		"languages": [{
            "id": "objeck",
            "aliases": ["Objeck", "objeck"],
            "extensions": [".obs"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "objeck",
            "scopeName": "source.objeck",
            "path": "./syntaxes/objeck.tmLanguage.json"
        }]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.0",
		"@types/node": "^20.0.0",
		"@typescript-eslint/eslint-plugin": "^7.0.0",
		"@typescript-eslint/parser": "^7.0.0",
		"eslint": "^8.56.0",
		"mocha": "^10.7.0",
		"typescript": "^5.4.0"
	}
}
